@using PDSS.MVC.Utility;
@{
    ViewBag.Title = "系统提示";
}
@section scripts{
<script src="http://civetinterface.foxconn.com/Scripts/CivetJsSDK-latest.min.js"></script>  
<script type="text/javascript">
    cm.hideOptionMenu();
</script>
<style type="text/css">
 body { 
     background-color: #f5f5f5; 
     height: 100% 
 }
#info {
    color: #808080;
    font-size: 15px;
    font-family: SimHei;
    max-width: 450px;
    width: 95%;
    margin: 50px auto;
}
.back-btn {
    background: #007ACC;
    border-radius: 5px;
    display: block;
    color: #FFF;
    font-size: 18px;
    line-height: 35px;
    text-align: center; 
    text-decoration: none;
    width: 80%;
    max-width: 400px;
    margin: 5px auto;
}
</style>
}

<div id="info">@Html.Raw(ViewBag.ErrMsg)</div>

@if (ViewBag.HistoryBack == true)
{
<div id="historyback">
    <a href="javascript:void(0)" class="back-btn" onclick="javascript:history.back();">請點擊此處返回</a>
</div>
}
else if (!string.IsNullOrEmpty(ViewBag.UrlTo))
{ 
<div id="historyback">
    <a href="@ViewBag.UrlTo" class="back-btn">確定</a>
</div>
}

